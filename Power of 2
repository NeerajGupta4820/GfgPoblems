//link of the problem: https://practice.geeksforgeeks.org/problems/power-of-2-1587115620/1


class Solution{
    public:
    // Function to check if given number n is a power of two.
    bool solve(long long n){

    }
    bool isPowerofTwo(long long n){
        
        // Your code here   
        if(n==1) return true;
                long long ans=2;
        for(int i=0;i<n/2;i++){
            if(ans==n) return true;
            else if(ans>n) break;
            ans=ans*2;
        }
        return false;
    }
};
